<section class="custom-grid">
  <div class="grid-container">
    {% for block in section.blocks %}
      {% assign product = all_products[block.settings.product] %}
      {% if product %}
        <div class="grid-item">
          <img 
            src="{{ product.featured_image | img_url: '600x600' }}" 
            alt="{{ product.title }}"
            width="600"
            height="600"
          >
          <h3 class="product-title">{{ product.title }}</h3>
          <p class="product-price">{{ product.price | money }}</p>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Custom Product Grid",
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Custom Product Grid",
      "category": "Products"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.custom-grid {
  max-width: 1340px;
  margin: 0 auto;
  padding: 60px 20px;
}
.grid-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 30px;
}
.grid-item {
  border: 1px solid #ddd;
  text-align: center;
  padding: 20px;
  background: #fff;
}
.grid-item img {
  display: block;
  width: 100%;
  height: auto;
}
.product-title {
  font-family: 'Lustria', serif;
  font-size: 20px;
  margin: 10px 0;
}
.product-price {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}
{% endstylesheet %}
