{{ 'custom-banner.css | assests_url | stylesheet_tag' }}
<section class="custom-banner">
  <div class="banner-content">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.subheading }}</p>
    <div class="banner-buttons">
      {% if section.settings.primary_btn_text != blank %}
        <a href="{{ section.settings.primary_btn_link }}" class="btn primary">
          {{ section.settings.primary_btn_text }}
        </a>
        {% endif %} 
      {% if section.settings.secondary_btn_text != blank %}
        <a href="{{ section.settings.secondary_btn_link }}" class="btn secondary">
          {{ section.settings.secondary_btn_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name" : "Customer Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Banner Heading",
      "default": "Welcome to Our Store"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Banner Subheading",
      "default": "Discover our latest collection"
    },
    {
      "type":"url",
      "id":"primary_btn_link",
      "label":"Primary Button Link"
    },
    {
      "type": "text",
      "id":"primary_btn_text",
      "label":"Primary Button Text",
      "default": "Shop Now"
    },
    {
      "type":"url",
      "id": "secondary_btn_link",
      "label": "Secondary Button Link"
    },
    {
      "type":"text",
      "id": "secondary_btn_text",
      "label": "Secondary Button Text",
      "default": "Learn More"
    }

  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}
