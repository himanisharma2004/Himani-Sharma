{{ 'custom-banner.css | assests_url | stylesheet_tag' }}

<section class="custom-banner" style="background-image: url({{ section.settings.bg_image | image_url: width:1600 }});">
  <div class="banner-container">
    <div class="banner-content">
      
        {% if section.settings.eyebrow_text != blank %}
          <div class="banner-eyebrow">{{ section.settings.eyebrow_text }}</div>
        {% endif %}

        {% if section.settings.main_heading != blank %}
          <h1 class="banner-heading">{{ section.settings.main_heading }}</h1>
        {% endif %}

        {% if section.settings.subheading != blank %}
          <p class="banner-subheading">{{ section.settings.subheading }}</p>
        {% endif %}
        
        <div class="banner-buttons">
          {% if section.settings.primary_btn_text != blank %}
            <a href="{{ section.settings.primary_btn_link }}" class="btn btn-primary animated-btn">
              {{ section.settings.primary_btn_text }}
            </a>
          {% endif %}

          {% if section.settings.secondary_btn_text != blank %}
            <a href="{{ section.settings.secondary_button_link }}" class="btn btn-secondary animated-btn">
              {{ section.settings.secondary_btn_text }}
            </a>
          {% endif %}
        </div>
      </div>
      </div>
    </section>
    

{% schema %}
{
  "name": "Custom Banner",
  "class": "custom-banner-section",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow_text",
      "label": "Eyebrow Text",
      "default": "Welcome to our store"
    },
    {
      "type": "text",
      "id": "main_heading",
      "label": "Main Heading",
      "default": "Discover Amazing Products"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Find the perfect products for your need with our clothes collections"
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primary Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "primary_button_url",
      "label": "Primary Button URL",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "secondary_button_url",
      "label": "Secondary Button URl",
      
    },
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}
